{
  "name": "partner-dashboard-clean",
  "version": "0.1.17",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "lint": "eslint main.js src/preload.js",
    "build:win32": "electron-builder --win portable",
    "build": "npm run build:win32",
    "pack": "electron-builder --dir",
    "postinstall": "node scripts/decode-icons.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "smoke": "echo \"Smoke tests disabled\"",

    "ci": "npm run lint && npm test && npm run build",
    "version-bump": "node -e \"const fs=require('fs');const p=JSON.parse(fs.readFileSync('package.json','utf8'));const o=p.version.split('.');o[2]=+o[2]+1;const n=o.join('.');['index.html','README.md'].forEach(f=>{let c=fs.readFileSync(f,'utf8');fs.writeFileSync(f,c.replace(new RegExp('v'+p.version,'g'),'v'+n));});p.version=n;fs.writeFileSync('package.json',JSON.stringify(p,null,2)+'\\n');\""
  },
  "devDependencies": {
    "@playwright/test": "^1.41.2",
    "cross-env": "^7.0.3",
    "electron": "^26.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.41.2"
  },
  "dependencies": {
    "chart.js": "^4.5.0",
    "mitt": "2.1.0",
    "papaparse": "^5.5.3",
    "xlsx": "^0.18.5"
  },
  "build": {
    "productName": "Partner Cockpit Dashboard",
    "appId": "com.jorgemuc.partnerdashboard",
    "asar": true,
    "files": [
      "**/*",
      "src/preload.js"
    ],
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico",
      "artifactName": "Portable ${productName} ${version}.exe"
    },
    "icon": "assets/icons/partner_dashboard_icon_1024.png"
  }
}
